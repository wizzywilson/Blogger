



  <button id="Modal" type="button" class="btn btn-primary btn-block followbtn" data-toggle="modal" data-target="#myModal"> <strong>Share post</strong> </button>
  
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content" style="margin-top:100px;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Compose new micropost...</h4>
        </div>
        <div class="modal-body">
          <%= render 'microposts/micropost_form'%>

        </div>
        <div class="modal-footer">
          <button type="button" id="submit_post" class="btn btn-primary">Save changes</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
