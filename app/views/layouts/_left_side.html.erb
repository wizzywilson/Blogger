<div class="col-sm-2">
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-5 profile_pic">
            <%= gravatar_for(@user,60) %>
        </div>
        <div class="col-sm-7 profile_atrributes">
            <div class="profile_name"> <strong><%= @user.first_name %></strong> </div>
            <div class=""> <%=link_to "View profile", home_index_path %> </div>
            <div class=""><%= @user.microposts.length %> Microposts</div>
        </div>

    </div>
  </div>
  <div >
      <% if current_user %>
          <%= render 'layouts/stats' %>
      <% end %>

      <% if current_user!=@user%>
        <% if !current_user.following.include? @user %>
           <%= render 'accounts/follow' %>
        <% else %>
          <%= render 'accounts/unfollow' %>
        <% end %>
      <% end %>

  </div>
</div>
